{%- comment -%}as_color_background_from_date.liquid {%- endcomment -%}
{%- assign _color_background = "null" -%}

{%- capture _day -%}
    {%- include as_day_from_date.liquid from_date=include.from_date -%}
{%- endcapture -%}

{%- if _day != "null" -%}
    {%- assign _color_background = "color_background_" | append: _day | strip_newlines -%}
{%- endif -%}


{%- comment -%} return {%- endcomment -%}
{%- capture _return -%}
    {%- include return_from.liquid from=_color_background -%}
{%- endcapture -%}
{{ _return }}

{%- comment -%} resetting variables {%- endcomment -%}
{%- assign _return = null -%}
{%- assign _day = null -%}
{%- assign _color_background = null -%}
