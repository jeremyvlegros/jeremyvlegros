{%- include CONFIGURATION/ALL.liquid -%}

{%- assign clean_array = ARRAY_EMPTY -%}

{%- assign string_tags = include.from_tags | compact -%}

{%- for element in string_tags -%}

    {%- assign inner_element = element
            | replace :"'",""
            | replace : '"',''
            | replace :"[",""
            | replace :"]",""
            | replace :", ",""
    -%}

    {%- if inner_element == "" -%}
        {%- continue -%}
    {%- endif -%}

    {%- if inner_element contains "#" -%}

        {% comment %} do nothing {% endcomment %}
        {% comment %} INNER ELEMENT {{ inner_element }}{% endcomment %}

    {%- else -%}

        {%- assign inner_element = "#" | append : inner_element -%}

    {%- endif -%}

    {%- assign clean_array = clean_array | push : inner_element -%}

{%- endfor -%}

{%- assign return = clean_array -%}