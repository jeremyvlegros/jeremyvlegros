{%- comment -%} as_id_from_date.liquid {%- endcomment -%}
{%- comment -%} initialization {%- endcomment -%}
{%- assign _date = include.date -%}
{%- assign _id = 'null' -%}

{%- comment -%} dealing with empty string {%- endcomment -%}
{%- if _date == "" -%}
    {%- assign _date = null -%}
{%- endif -%}

{%- comment -%} date is custom (mine) {%- endcomment -%}
{%- if _date contains "#" and _date contains "GMT" -%}

    {%- comment -%}everything as array {%- endcomment -%}
    {%- assign _date = _date | split: " " -%}

    {%- comment -%}getting id {%- endcomment -%}
    {%- assign _id = _date[3] -%}
{%- endif -%}


{%- comment -%} return {%- endcomment -%}
{%- assign _return = _id | upcase -%}
{%- case _return -%}
    {%- when "" or "NULL" or null -%}
        {{ 'null' }}
    {%- else -%}
        {{ _id }}
{%- endcase -%}
{%- assign _return = null -%}

{%- assign _date = null -%}
{%- assign _id = null -%}

